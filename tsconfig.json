{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "types": [
      "node",
      "jest"
    ],
    "baseUrl": ".",
    "outDir": "lib"
  },
  "include": ["./src/**/*.ts"]
}
